{
  "openapi": "3.0.3",
  "info": {
    "title": "FPT Event Management API",
    "description": "API hệ thống quản lý sự kiện FPTU.\n\n## Features\n- **Auth**: Đăng nhập, Đăng ký, OTP, Quên mật khẩu\n- **Event**: Xem, Tạo, Quản lý sự kiện\n- **Venue**: Quản lý địa điểm và phòng (Mới)\n- **Check-in**: Quét QR code",
    "version": "1.0.0",
    "contact": {
      "name": "FPT Event Team",
      "email": "support@fptevent.edu.vn"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080/FPTEventManagement",
      "description": "Local Development Server"
    }
  ],
  "tags": [
    { "name": "Guest", "description": "API công khai (Login, Register)" },
    { "name": "Student", "description": "API cho sinh viên" },
    { "name": "Event Organizer", "description": "API quản lý sự kiện" },
    { "name": "Staff", "description": "API check-in & vận hành" },
    { "name": "Venue", "description": "API quản lý địa điểm (Admin/Organizer)" }
  ],
  "paths": {
    "/api/login": {
      "post": {
        "tags": ["Guest"],
        "summary": "[Guest] Đăng nhập",
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LoginResponse" } } }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "tags": ["Guest"],
        "summary": "[Guest] Đăng ký tài khoản",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegisterRequest" }
            }
          }
        },
        "responses": { "201": { "description": "Đăng ký thành công" } }
      }
    },
    "/api/register/send-otp": {
      "post": {
        "tags": ["Guest"],
        "summary": "[Guest] Gửi OTP xác thực",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RegisterRequest" } } }
        },
        "responses": { "200": { "description": "Đã gửi OTP" } }
      }
    },
    "/api/register/verify-otp": {
      "post": {
        "tags": ["Guest"],
        "summary": "[Guest] Xác thực OTP & Tạo tài khoản",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "otp"],
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "string" },
                  "otp": { "type": "string", "example": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Xác thực thành công" } }
      }
    },
    "/api/forgot-password": {
      "post": {
        "tags": ["Guest"],
        "summary": "[Guest] Quên mật khẩu - Gửi OTP",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "email": { "type": "string", "example": "string" } }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/reset-password": {
      "post": {
        "tags": ["Guest"],
        "summary": "[Guest] Đặt lại mật khẩu mới",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { 
                    "otp": { "type": "string", "example": "string" },
                    "newPassword": { "type": "string", "example": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/events": {
      "get": {
        "tags": ["Student"],
        "summary": "[Student] Xem danh sách sự kiện",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "string", "enum": ["UPCOMING", "ONGOING", "COMPLETED"], "example": "string" }
          }
        ],
        "responses": { "200": { "description": "Danh sách sự kiện" } }
      },
      "post": {
        "tags": ["Event Organizer"],
        "summary": "[Organizer] Tạo sự kiện mới",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["eventName", "startTime", "venueId"],
                "properties": {
                    "eventName": { "type": "string", "example": "string" },
                    "description": { "type": "string", "example": "string" },
                    "venueId": { "type": "integer", "example": 0 },
                    "startTime": { "type": "string", "format": "date-time", "example": "2024-01-01T00:00:00" },
                    "endTime": { "type": "string", "format": "date-time", "example": "2024-01-01T00:00:00" },
                    "maxSeats": { "type": "integer", "example": 0 }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/events/{eventId}": {
      "get": {
        "tags": ["Student"],
        "summary": "Xem chi tiết sự kiện",
        "parameters": [
            { "name": "eventId", "in": "path", "required": true, "schema": { "type": "integer", "example": 0 } }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
          "tags": ["Event Organizer"],
          "summary": "Hủy sự kiện",
          "security": [{ "BearerAuth": [] }],
          "parameters": [
            { "name": "eventId", "in": "path", "required": true, "schema": { "type": "integer", "example": 0 } }
          ],
          "responses": { "200": { "description": "Deleted" } }
      }
    },
    "/api/venues": {
      "get": {
        "tags": ["Venue"],
        "summary": "Xem danh sách địa điểm (Dropdown)",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Venue" } } } }
          }
        }
      },
      "post": {
        "tags": ["Venue"],
        "summary": "Tạo địa điểm mới (Admin)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VenueCreateRequest" }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "tags": ["Venue"],
        "summary": "Cập nhật địa điểm (Admin)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Venue" } } }
        },
        "responses": { "200": { "description": "Updated" } }
      },
      "delete": {
        "tags": ["Venue"],
        "summary": "Xóa địa điểm (Soft Delete)",
        "parameters": [
            { "name": "venueId", "in": "query", "schema": { "type": "integer", "example": 0 } }
        ],
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "Deleted" } }
      }
    },
    "/api/venues/areas": {
      "get": {
        "tags": ["Venue"],
        "summary": "Lấy danh sách phòng theo VenueID (Cascading)",
        "parameters": [
            { "name": "venueId", "in": "query", "required": true, "schema": { "type": "integer", "example": 0 } }
        ],
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "tags": ["Venue"],
        "summary": "Thêm phòng vào địa điểm",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VenueAreaCreateRequest" }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      },
      "put": {
        "tags": ["Venue"],
        "summary": "Cập nhật thông tin phòng (Admin)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VenueAreaUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Updated" },
          "400": { "description": "Bad request / validation failed" },
          "403": { "description": "Forbidden" }
        }
      },
      "delete": {
        "tags": ["Venue"],
        "summary": "Xóa phòng (Soft Delete) (Admin)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "areaId", "in": "query", "required": true, "schema": { "type": "integer", "example": 0 } }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "400": { "description": "Bad request" },
          "403": { "description": "Forbidden" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Nhập token JWT vào đây: `Bearer <token>`"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "example": "string" },
          "password": { "type": "string", "format": "password", "example": "string" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "string" },
          "token": { "type": "string", "example": "string" },
          "user": { "$ref": "#/components/schemas/User" }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": ["fullName", "email", "password"],
        "properties": {
          "fullName": { "type": "string", "example": "string" },
          "phone": { "type": "string", "example": "string" },
          "email": { "type": "string", "example": "string" },
          "password": { "type": "string", "example": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 0 },
          "fullName": { "type": "string", "example": "string" },
          "email": { "type": "string", "example": "string" },
          "role": { "type": "string", "enum": ["Student", "Event Organizer", "Staff"], "example": "string" }
        }
      },
      "Venue": {
        "type": "object",
        "properties": {
          "venueId": { "type": "integer", "example": 0 },
          "venueName": { "type": "string", "example": "string" },
          "location": { "type": "string", "example": "string" },
          "status": { "type": "string", "example": "string" }
        }
      },
      "VenueCreateRequest": {
        "type": "object",
        "required": ["venueName", "location"],
        "properties": {
          "venueName": { "type": "string", "example": "string" },
          "location": { "type": "string", "example": "string" }
        }
      },
      "VenueArea": {
        "type": "object",
        "properties": {
          "areaId": { "type": "integer", "example": 0 },
          "areaName": { "type": "string", "example": "string" },
          "capacity": { "type": "integer", "example": 0 }
        }
      },
      "VenueAreaCreateRequest": {
        "type": "object",
        "required": ["venueId", "areaName", "capacity"],
        "properties": {
          "venueId": { "type": "integer", "example": 0 },
          "areaName": { "type": "string", "example": "string" },
          "floor": { "type": "string", "example": "string" },
          "capacity": { "type": "integer", "example": 0 }
        }
      },
      "VenueAreaUpdateRequest": {
        "type": "object",
        "required": ["areaId", "areaName", "capacity"],
        "properties": {
          "areaId": { "type": "integer", "example": 0 },
          "areaName": { "type": "string", "example": "string" },
          "floor": { "type": "string", "example": "string" },
          "capacity": { "type": "integer", "example": 0 }
        }
      }
    }
  }
}
